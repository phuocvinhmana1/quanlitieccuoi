@model Modelss.Code.DangNhapModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    
    
    <section class="login_part section_padding" style="background:top" >
            <div class="container" style="margin-top:-200px">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6">
                        <div class="login_part_text text-center">
                            <div class="login_part_text_iner">
                                <h2>Xin chào!</h2>
                                <p>Bạn chưa có tài khoản?
                                    Tiến hành đăng kí tại đây</p>
                                <a href="@Url.Action("Index","DangKy")" class="btn_3">Tạo tài khoản</a>
                                <br />
                                <br />
                                <br />

                                <p>Bạn là người quản trị?
                                    Tiến hành đăng nhập tại đây</p>

                                <a href="@Url.Action("Index","Admin/Ad_Login")" class="btn_3">ADMIN</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="login_part_form">
                            <div class="login_part_form_iner">
                                <h3>Chào mừng! <br>
                                    Quay trở lại</h3>
                                <form class="row contact_form" action="#" method="post" novalidate="novalidate">
                                    
                                    
                                    <div class="editor-label">
          
        </div>


        <div class="editor-field">
            @Html.TextBoxFor(model => model.tendangnhap,new { @class = "form-control form-control-user" , placeholder="Nhập tên đăng nhập..." })
            @Html.ValidationMessageFor(model => model.tendangnhap)
        </div>

  
        <div class="editor-field" style="margin-top:20px;">
            @Html.PasswordFor(model => model.matkhau,new { @class = "form-control form-control-user" , placeholder="Nhập mật khẩu..." })
            @Html.ValidationMessageFor(model => model.matkhau)
        </div>

       
       
     


                                    <div class="col-md-12 form-group">
                                        <div class="creat_account d-flex align-items-center">
                                            <input type="checkbox" id="f-option" name="selector">
                                            <label for="f-option">Lưu mật khẩu</label>
                                        </div>
                                        <button type="submit" value="Đăng nhập" class="btn_3">
                                            Đăng nhập
                                        </button>
                                
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
   

}


